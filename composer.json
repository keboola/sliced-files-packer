{
    "name": "keboola/sliced-files-packer",
    "description": "Component to prepare zip package with sliced files",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.1",
        "symfony/serializer": "^3.3",
        "symfony/filesystem": "^3",
        "symfony/finder": "^3",
        "symfony/process": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6",
        "squizlabs/php_codesniffer": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\": "src/Keboola/"
        }
    },
    "scripts": {
        "phpunit": "phpunit --colors=always",
        "phpcs": "phpcs --standard=psr2 -n --ignore=vendor --extensions=php .",
        "tests": [
            "@phpcs",
            "@phpunit"
        ]
    }
}
